    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pair Client",
            "type": "debugpy",
            "request": "launch",
            "module": "pcbu",
            "args": ["-v", "pair-client"],
            "console": "integratedTerminal"
        },
        {
            "name": "Pair Server",
            "type": "debugpy",
            "request": "launch",
            "module": "pcbu",
            "args": ["-v", "pair-server", "--ip", "auto"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Unlock Server",
            "type": "debugpy",
            "request": "launch",
            "module": "pcbu",
            "args": ["-v", "unlock-server", "--ip", "auto"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}